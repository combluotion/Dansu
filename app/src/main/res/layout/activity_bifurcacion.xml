<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="46dp"
    android:background="#3498db"
    tools:context="com.example.elamoreslomasgrande.volley1.Login.Bifurcacion">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_logo"/>
    <Button
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:paddingVertical="8dp"
        android:layout_marginTop="106dp"
        android:text="@string/bifurcacion1"
        android:onClick="RegistroUsuario"
        android:background="@drawable/btn_bifurcacion"/>
    <Button
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:paddingVertical="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/bifurcacion2"
        android:onClick="RegistroEmpresa"
        android:background="@drawable/btn_bifurcacion"/>

</LinearLayout>

