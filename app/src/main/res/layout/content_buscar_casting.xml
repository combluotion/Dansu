<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.elamoreslomasgrande.volley1.NavigationChildren.BuscarCasting"
    tools:showIn="@layout/activity_buscar_casting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/buscarCastingPalabraClave"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColorHint="#de000000"
            android:layout_marginTop="9dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/buscarCastingCiudad"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColorHint="#de000000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/buscarCastingCategoria"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColorHint="#de000000"
            />
        <Button
            android:layout_width="122dp"
            android:layout_height="36dp"
            android:text="@string/buscarCastingBtnBuscar"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:layout_marginTop="26dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="13dp"
        android:background="#ebebeb"
        android:layout_marginTop="19dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buscarCastingUltimasBusquedas"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#000000"
            android:letterSpacing="0.03"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:text="@string/buscarCastingCLugar"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:text="@string/buscarCastingCCategoria"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="18dp"
                    android:background="#9b9b9b"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
