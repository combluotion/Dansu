<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.elamoreslomasgrande.volley1.Login.RegisterPage">

    <ImageView
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:src="@drawable/circle"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="26dp"/>
    <TextView
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#000000"
        android:letterSpacing="0.03"
        android:gravity="center_horizontal"
        android:text="@string/registro_cuerpo"
        android:layout_marginBottom="12dp"/>
    <EditText
        android:id="@+id/NameUser"
        android:inputType="textPersonName"
        android:layout_width="269.2dp"
        android:layout_height="48dp"
        android:hint="@string/registro_nombre"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:maxLines="1"
        android:backgroundTint="#000000"
        />

    <EditText
        android:id="@+id/EmailRegister"
        android:layout_width="269.2dp"
        android:layout_height="48dp"
        android:hint="@string/login_mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:maxLines="1"
        android:backgroundTint="#000000"
        />
    <TextView
        android:layout_width="269.2dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#000000"
        android:letterSpacing="0.03"
        android:text="@string/registro_error1"
        />
    <EditText
        android:id="@+id/Password"
        android:layout_width="269.2dp"
        android:layout_height="48dp"
        android:hint="@string/login_psswd"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:maxLines="1"
        android:backgroundTint="#000000"/>
    <TextView
        android:layout_width="269.2dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#000000"
        android:letterSpacing="0.03"
        android:layout_marginBottom="16dp"
        android:text="@string/registro_error2"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:textAllCaps="false"
        android:text="@string/login_entrar"
        android:onClick="Registrar"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:textAllCaps="false"
        android:text="@string/registro_google"
        android:layout_marginBottom="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro_iniciar_sesion"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_marginBottom="22dp"
        android:letterSpacing="0.03"
        android:gravity="center_horizontal"/>

</LinearLayout>


