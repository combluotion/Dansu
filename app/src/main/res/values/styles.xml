<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/MyButton</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tabTextColor">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyNavigationViewItemStyle" parent="AppTheme">
        <item name="listPreferredItemPaddingLeft">23.5dp</item>
        <item name="listPreferredItemPaddingRight">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>